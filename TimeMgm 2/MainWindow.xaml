<Window x:Class="TimeMgm_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeMgm_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200" WindowStyle="None" Background="Transparent" AllowsTransparency="True" Loaded="Window_Loaded" ShowInTaskbar="False" Closed="Window_Closed" >
    <Grid>
        <Ellipse Margin="0,0,0,0" >
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0.782"/>
                    <GradientStop Color="#FF1C76CF" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Label Name="Ha" Margin="0,70" Foreground="white" FontSize="36" Content="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Label Name="Hb" Margin="0,120, 0, 40" Foreground="WhiteSmoke" Opacity="0.8" FontSize="20" Content="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Label Name="Am" Margin="0,40, 0, 120" Foreground="LightGreen"  Opacity="0.8" FontSize="20" Content="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
    </Grid>
</Window>
